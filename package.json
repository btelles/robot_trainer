{
  "name": "robot_trainer",
  "productName": "robot_trainer",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "npx drizzle-kit generate && npm run db:generate && electron-forge start -- -enable-logging --logging-level=0",
    "package": "electron-forge package",
    "prepackage": "npm run build-python",
    "test": "vitest",
    "db:generate": "drizzle-kit generate && tsc >> /dev/null || node ./dist/src/db/compile_migrations.js",
    "test:playwright": "npm run db:generate && npm run package && npx playwright test",
    "make": "electron-forge make",
    "build-python": "cd src/python && pyinstaller --onefile --name robot_trainer_py main.py --distpath dist --workpath build/pyinstaller --specpath build/pyinstaller_spec && pyinstaller --onefile --name simulate simulate.py --distpath dist --workpath build/pyinstaller --specpath build/pyinstaller_spec",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "Bernie Telles",
    "email": "btelles@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.57.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "39.2.7",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "~4.5.4",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@serialport/bindings-cpp": "^13.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "bufferutil": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "serialport": "^13.0.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "utf-8-validate": "^6.0.6",
    "ws": "^8.18.3",
    "zustand": "^5.0.9"
  }
}
